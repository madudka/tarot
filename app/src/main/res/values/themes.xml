<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tarot" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Custom.BottomNavView" parent="Widget.Material3.BottomNavigationView">
        <item name="android:background">@color/dark_purple</item>
        <item name="itemTextColor">@color/peach</item>
        <item name="itemIconTint">@color/peach</item>
        <item name="itemRippleColor">@drawable/custom_nav_bar_ripple_color_selector</item>
        <item name="itemIconSize">32dp</item>
        <item name="itemActiveIndicatorStyle">@style/Custom.Indicator</item>
        <item name="labelVisibilityMode">auto</item>

    </style>

    <style name="Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/dark_red</item>
    </style>

    <!--BUTTON-->

    <style name="Custom.OutlinedButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/peach</item>
        <item name="strokeWidth">4dp</item>
        <item name="android:textColor">@color/peach</item>
        <item name="android:textAppearance">@style/Custom.TextAppearance</item>
        <item name="android:paddingTop">18dp</item>
        <item name="android:paddingBottom">18dp</item>
        <item name="itemRippleColor">@drawable/custom_outline_btn_ripple_color_selector</item>
    </style>

    <!--TEXT APPEARANCE-->

    <style name="Custom.TextAppearance" parent="TextAppearance.Material3.HeadlineMedium">
        <!--item name="android:fontFamily">@font/elmessiri_semibold</item-->
        <item name="android:textColor">@color/peach</item>
        <item name="fontFamily">@font/elmessiri_semibold</item>
    </style>

    <style name="Custom.TextAppearanceNoColor" parent="TextAppearance.Material3.BodySmall">
        <!--item name="android:fontFamily">@font/elmessiri_semibold</item-->
        <item name="fontFamily">@font/elmessiri_semibold</item>
    </style>

    <style name="Custom.TextAppearanceHeadline" parent="TextAppearance.Material3.HeadlineLarge">
        <!--item name="android:fontFamily">@font/elmessiri_bold</item-->
        <item name="android:textColor">@color/dark_blue</item>
        <item name="fontFamily">@font/elmessiri_bold</item>
    </style>

    <style name="Custom.TextAppearanceInfo" parent="TextAppearance.Material3.HeadlineMedium">
        <!--item name="android:fontFamily">@font/elmessiri_semibold</item-->
        <item name="android:textColor">@color/platinum</item>
        <item name="fontFamily">@font/elmessiri_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Custom.TextAppearanceHeadline1" parent="TextAppearance.Material3.HeadlineMedium">
        <!--item name="android:fontFamily">@font/elmessiri_semibold</item-->
        <item name="android:textColor">@color/platinum</item>
        <item name="fontFamily">@font/elmessiri_semibold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Custom.TextAppearanceHeadline2" parent="TextAppearance.Material3.HeadlineMedium">
        <!--item name="android:fontFamily">@font/elmessiri_semibold</item-->
        <item name="android:textColor">@color/platinum</item>
        <item name="fontFamily">@font/elmessiri_semibold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Custom.TextInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/dark_red</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColorHint">@color/platinum</item>
        <item name="counterTextAppearance">@style/Custom.TextAppearanceNoColor</item>
        <item name="errorTextAppearance">@style/Custom.TextAppearanceNoColor</item>
        <item name="helperTextTextAppearance">@style/Custom.TextAppearanceNoColor</item>
        <item name="hintTextAppearance">@style/Custom.TextAppearanceNoColor</item>
        <item name="boxStrokeColor">@drawable/custom_text_input_layout_color_selector</item>
        <item name="counterTextColor">@color/platinum</item>
        <item name="helperTextTextColor">@color/platinum</item>
        <item name="hintTextColor">@color/platinum</item>
        <item name="placeholderTextColor">@color/dark_red</item>
        <item name="startIconTint">@color/dark_red</item>
    </style>

    <!--IMAGE SHAPE-->

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!--ALERT DIALOG-->

    <style name="Custom.AlertDialog" parent="MaterialAlertDialog.Material3">
        <!--item name="android:fontFamily">@font/elmessiri_semibold</item-->
        <item name="fontFamily">@font/elmessiri_semibold</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/Custom.AlertDialog.Button</item>
        <item name="android:background">@color/platinum</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="Custom.AlertDialog.Button" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="buttonBarButtonStyle">@style/Custom.AlertDialog.Button</item>
    </style>

    <style name="Custom.AlertDialog.Button.Text" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_red</item>
    </style>

</resources>